<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========================================================= -->
    <!--  APP THEME                                                -->
    <!-- ========================================================= -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/ropa_sans</item>
    </style>


    <!-- ========================================================= -->
    <!--  COLORS (BASE)                                            -->
    <!-- ========================================================= -->
    <color name="app_background">#191C3A</color>
    <color name="text_primary">#FFFFFFFF</color>
    <color name="text_secondary">#A8A9B8</color>
    <color name="text_orange">#FFC107</color>

    <!-- Opcionales si luego los usas -->
    <color name="discount_text">#191C3A</color>
    <color name="price_original">#A8A9B8</color>


    <!-- ========================================================= -->
    <!--  TEXT APPEARANCE                                          -->
    <!-- ========================================================= -->
    <style name="GameText.Default" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/ropa_sans</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="GameButton.Text" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/ropa_sans</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- ========================================================= -->
    <!--  INPUT FIELD STYLE                                         -->
    <!-- ========================================================= -->
    <style name="InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- ========================================================= -->
    <!--  BUTTONS                                                   -->
    <!--  Importante: backgroundTint y materialThemeOverlay a null -->
    <!--  para evitar que el tema sobrescriba tu drawable.         -->
    <!-- ========================================================= -->

    <style name="GameButton.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Clave para respetar TU drawable -->
        <item name="backgroundTint">@null</item>
        <item name="materialThemeOverlay">@null</item>

        <item name="android:textAppearance">@style/GameButton.Text</item>
    </style>

    <!-- Botón naranja con tu gradient -->
    <style name="GameButton.Orange" parent="GameButton.Base">
        <item name="android:background">@drawable/gradient_orange</item>
    </style>

    <!-- Botón negro con tu gradient -->
    <style name="GameButton.Black" parent="GameButton.Base">
        <item name="android:background">@drawable/gradient_black</item>
    </style>

</resources>
