<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/ropa_sans</item>
    </style>

    <color name="app_background">#191C3A</color>
    <color name="text_primary">#FFFFFFFF</color>
    <color name="text_secondary">#A8A9B8</color>
    <color name="discount_background">#FFC107</color>
    <color name="discount_text">#191C3A</color>
    <color name="price_original">#A8A9B8</color>

    <style name="InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GameButton.Text" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/ropa_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GameButton.Orange" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_orange</item>
        <item name="android:textAppearance">@style/GameButton.Text</item>
    </style>

    <style name="GameButton.Black" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_black</item>
        <item name="android:textAppearance">@style/GameButton.Text</item>
    </style>
</resources>
