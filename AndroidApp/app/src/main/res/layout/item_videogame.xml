<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout: item_videogame.xml
    Descripción: Plantilla para mostrar un videojuego en un RecyclerView o GridLayout.
    Componentes:
      - ivVideoGame: Imagen del videojuego, mantiene proporción 1:1.
      - tvVideoGameCategory: Categoría o género del juego.
      - tvVideoGameTitle: Título del juego, una sola línea con truncado si es largo.
      - tvVideoGamePrice: Precio del juego.
    Uso: Se usa en listas de catálogo, favoritos o destacados.
-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Imagen del videojuego (proporción cuadrada) -->
    <ImageView
        android:id="@+id/ivVideoGame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rdr2" />

    <!-- Categoría del videojuego -->
    <TextView
        android:id="@+id/tvVideoGameCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBody2"
        android:fontFamily="@font/ropa_sans"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@+id/ivVideoGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        tools:text="Acción" />

    <!-- Título del videojuego -->
    <TextView
        android:id="@+id/tvVideoGameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/ropa_sans"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVideoGameCategory"
        tools:text="Red Dead Redemption II" />

    <!-- Precio del videojuego -->
    <TextView
        android:id="@+id/tvVideoGamePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:fontFamily="@font/ropa_sans"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@+id/tvVideoGameTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        tools:text="55.99€" />

</androidx.constraintlayout.widget.ConstraintLayout>
