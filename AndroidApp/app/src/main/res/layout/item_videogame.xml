<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <!-- Imagen del juego -->
    <ImageView
        android:id="@+id/ivVideoGame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rdr2" />

    <!-- Categoría del juego -->
    <TextView
        android:id="@+id/tvVideoGameCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBody2"
        android:fontFamily="@font/ropa_sans"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@+id/ivVideoGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        tools:text="Acción" />

    <!-- Título del juego -->
    <TextView
        android:id="@+id/tvVideoGameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/ropa_sans"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVideoGameCategory"
        tools:text="Red Dead Redemption II" />

    <!-- Precio del juego -->
    <TextView
        android:id="@+id/tvVideoGamePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:fontFamily="@font/ropa_sans"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@+id/tvVideoGameTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        tools:text="55.99€" />

</androidx.constraintlayout.widget.ConstraintLayout>
