<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.RegisterActivity">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_1"/>

    <!-- Contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Título -->
            <TextView
                android:id="@+id/register_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_title"
                android:textColor="@color/text_primary"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="80dp"/>

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/register_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_subtitle"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- Email -->
            <EditText
                android:id="@+id/etRegisterEmail"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"/>

            <!-- Confirmar Email -->
            <EditText
                android:id="@+id/etRegisterEmailConfirm"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:hint="@string/confirm_email_hint"
                android:inputType="textEmailAddress"/>

            <!-- Password -->
            <EditText
                android:id="@+id/etRegisterPassword"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:hint="@string/password_hint"
                android:inputType="textPassword"/>

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/etRegisterPasswordConfirm"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:hint="@string/confirm_password_hint"
                android:inputType="textPassword"/>

            <!-- Botón crear cuenta -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                style="@style/GameButton.Orange"
                android:layout_width="match_parent"
                android:layout_marginTop="28dp"
                android:text="@string/create_account_button" />

            <!-- Enlace para iniciar sesión -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/alreadyUserText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_have_account_prompt"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/loginLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_link"
                    android:textSize="14sp"
                    android:textColor="@color/text_orange"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
