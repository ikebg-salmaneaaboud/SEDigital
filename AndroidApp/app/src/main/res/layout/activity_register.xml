<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout: activity_register.xml
    Actividad: RegisterActivity
    Descripción: Pantalla de registro de usuario en GAMR.
    Contiene:
      - Imagen de fondo.
      - Campos de entrada: email, confirmación de email, password, confirmación de password.
      - Botón para crear cuenta.
      - Enlace para usuarios existentes que quieren iniciar sesión.
-->

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.RegisterActivity">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_1"/>

    <!-- Contenido principal con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Título de la pantalla -->
            <TextView
                android:id="@+id/register_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_title"
                android:textColor="@color/text_primary"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="80dp"/>

            <!-- Subtítulo descriptivo -->
            <TextView
                android:id="@+id/register_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_subtitle"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- Campo Email -->
            <EditText
                android:id="@+id/etRegisterEmail"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"/>

            <!-- Confirmación de Email -->
            <EditText
                android:id="@+id/etRegisterEmailConfirm"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:hint="@string/confirm_email_hint"
                android:inputType="textEmailAddress"/>

            <!-- Campo Password -->
            <EditText
                android:id="@+id/etRegisterPassword"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:hint="@string/password_hint"
                android:inputType="textPassword"/>

            <!-- Confirmación de Password -->
            <EditText
                android:id="@+id/etRegisterPasswordConfirm"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:hint="@string/confirm_password_hint"
                android:inputType="textPassword"/>

            <!-- Botón Crear Cuenta -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                style="@style/GameButton.Orange"
                android:layout_width="match_parent"
                android:layout_marginTop="28dp"
                android:text="@string/create_account_button" />

            <!-- Enlace para iniciar sesión si ya existe cuenta -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/alreadyUserText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_have_account_prompt"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/loginLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_link"
                    android:textSize="14sp"
                    android:textColor="@color/text_orange"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
