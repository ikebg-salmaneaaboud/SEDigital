<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout: header_with_return.xml
    Descripción: Cabecera reutilizable de GAMR con logo, ícono de retorno y búsqueda.
    Componentes:
      - header_return_icon: Ícono de regresar, alineado a la izquierda.
      - header_logo: Logo central de la aplicación.
      - header_search_icon: Ícono de búsqueda, alineado a la derecha.
    Uso: Se incluye en actividades donde se requiere la cabecera con botón de retorno.
-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:paddingVertical="24dp"
    android:paddingHorizontal="10dp">

    <!-- Icono de retorno (volver a la pantalla anterior) -->
    <ImageView
        android:id="@+id/header_return_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/content_description_return"
        android:src="@drawable/ic_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_primary" />

    <!-- Logo de la App (centrado) -->
    <ImageView
        android:id="@+id/header_logo"
        android:layout_width="97dp"
        android:layout_height="37dp"
        android:contentDescription="@string/content_description_app_logo"
        android:cropToPadding="false"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_primary" />

    <!-- Icono de Búsqueda -->
    <ImageView
        android:id="@+id/header_search_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/content_description_search"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_primary" />

</androidx.constraintlayout.widget.ConstraintLayout>
