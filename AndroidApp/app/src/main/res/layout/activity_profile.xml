<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout: activity_profile.xml
    Actividad: ProfileActivity
    Descripción: Pantalla de perfil de usuario en GAMR.
    Contiene:
      - Encabezado con logo y carrito de compras.
      - Barra de navegación inferior.
-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vertical_gradient"
    tools:context=".ui.profile.ProfileActivity">

    <!-- Encabezado con logo y carrito -->
    <include
        android:id="@+id/main_header"
        layout="@layout/header_with_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogOut"
        style="@style/GameButton.Orange"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="@string/logout_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_header" />

    <!-- Barra de navegación inferior -->
    <include
        layout="@layout/view_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
