<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout: activity_login.xml
    Actividad: LoginActivity
    Descripción: Pantalla de inicio de sesión de la app GAMR.
    Contiene:
      - Imagen de fondo
      - Título y subtítulo
      - Campos de email y contraseña
      - Botón de inicio de sesión
      - Enlace para registrarse como nuevo usuario
-->

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginActivity">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_1"/>

    <!-- Contenedor principal con scroll para dispositivos pequeños -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Título principal -->
            <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title"
                android:textColor="@color/text_primary"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="80dp"/>

            <!-- Subtítulo descriptivo -->
            <TextView
                android:id="@+id/login_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_subtitle"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- Campo de Email -->
            <EditText
                android:id="@+id/etEmail"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"/>

            <!-- Campo de Password -->
            <EditText
                android:id="@+id/etPassword"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:hint="@string/password_hint"
                android:inputType="textPassword" />

            <!-- Botón de inicio de sesión -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmLogin"
                style="@style/GameButton.Orange"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:text="@string/login_enter_button" />

            <!-- Sección de nuevo usuario con enlace a registro -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- Texto informativo "¿Nuevo usuario?" -->
                <TextView
                    android:id="@+id/tvNewUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_user_prompt"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary" />

                <!-- Enlace de registro -->
                <TextView
                    android:id="@+id/tvRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_link"
                    android:textSize="14sp"
                    android:textColor="@color/text_orange"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
