<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout: item_cart.xml
    Descripción: Elemento individual del carrito de compras.
    Estructura:
      - ConstraintLayout raíz con fondo personalizado y márgenes.
      - ImageView a la izquierda mostrando la portada del videojuego.
      - Contenedor interno (ConstraintLayout) para textos y controles:
          - TextView para el título del juego.
          - TextView para la categoría o desarrollador.
          - ImageView para icono de plataforma (PS5, Windows, etc.).
          - TextView para el precio.
          - ImageView para eliminar el item del carrito.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:padding="8dp"
    android:background="@drawable/cart_item_bg">

    <!-- Imagen de portada del juego -->
    <ImageView
        android:id="@+id/ivVideoGame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:background="@drawable/image_rounded"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@drawable/rdr2" />

    <!-- Contenedor de texto y controles -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivVideoGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Título del videojuego -->
        <TextView
            android:id="@+id/tvVideoGameTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/ropa_sans"
            android:singleLine="true"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/text_primary"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Red Dead Redemption II" />

        <!-- Categoría o desarrollador -->
        <TextView
            android:id="@+id/tvVideoGameCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ropa_sans"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/text_secondary"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvVideoGameTitle"
            tools:text="Rockstar Games" />

        <!-- Icono de plataforma -->
        <ImageView
            android:id="@+id/ivPlatform"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:adjustViewBounds="true"
            android:background="@drawable/image_rounded"
            android:scaleType="fitStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvVideoGameCategory"
            tools:srcCompat="@drawable/ps5" />

        <!-- Precio del videojuego -->
        <TextView
            android:id="@+id/tvVideoGamePrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/ropa_sans"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/text_primary"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPlatform"
            tools:text="55.99€" />

        <!-- Botón para eliminar item del carrito -->
        <ImageView
            android:id="@+id/ivRemoveCartItem"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/text_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvVideoGamePrice"
            app:layout_constraintBottom_toBottomOf="@+id/tvVideoGamePrice" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
