<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout: view_bottom_nav.xml
    Descripción: Barra de navegación inferior global para la app.
    Componentes:
      - BottomNavigationView: contiene los íconos y textos de navegación.
        - app:menu: referencia al menú definido en res/menu/bottom_nav_menu.xml.
        - app:itemIconTint y app:itemTextColor: selector de colores para estados activo/inactivo.
        - Altura fija de 75dp y fondo negro.
    Uso: Se incluye en actividades principales (Home, Catalog, Profile, Favorites).
-->
<com.google.android.material.bottomnavigation.BottomNavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNavigationView"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="#000000"
    app:itemIconTint="@color/bottom_nav_icon_selector"
    app:itemTextColor="@color/bottom_nav_icon_selector"
    app:menu="@menu/bottom_nav_menu" />
